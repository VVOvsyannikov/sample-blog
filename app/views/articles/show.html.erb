<h1><%= @article.title %></h1>
<p><%= @article.text %></p>
<hr />

<h2><%= t('comments.title') %></h2>
<% @article.comments.each do |comment| %>

<p>
	<i><%= comment.author %>
		said:</i>
</p>
<p><%= comment.body %></p>
<hr />

<% end %>

<h2><%= t('comments.add') %></h2>

<p>
	<%= form_for([@article, @article.comments.build]) do |f| %>

	<p>
		<%= f.label t('comments.body') %><br />
		<%= f.text_area :body %>
	</p>

	<p><%= f.submit %></p>

	<% end %>
</p>